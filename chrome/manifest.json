{
  "manifest_version": 2,
  "name": "PhraseApp AutoTranslate",
  "version": "1.1",

  "description": "Auto run machine translation to save time.",
  "author": "Vadorequest",

  "permissions": [
    "http://phraseapp.com/*",
    "https://phraseapp.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://phraseapp.com/*",
        "https://phraseapp.com/*"
      ],
      "css": ["style.css"],
      "js": ["jquery.min.js", "phraseapp.js"],
      "run_at": "document_end",
      "include_globs": ["*"]
    }
  ]
}
